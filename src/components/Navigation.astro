<nav
  id="navbar"
  class="fixed uppercase font-thin text-white w-full flex justify-between items-center px-6 py-8"
>
  <span class="text-base font-bold">Tomas Sorgetti</span>
  <button
    id="toggle__button"
    class="flex flex-col gap-[5px] h-full justify-center items-center lg:hidden"
  >
    <span class="w-6 h-[3px] rounded bg-textColor"></span>
    <span class="w-6 h-[3px] rounded bg-textColor"></span>
    <span class="w-6 h-[3px] rounded bg-textColor"></span>
  </button>
  <ul
    id="nav__menu"
    class="opacity-0 fixed left-full top-[86px] pb-24 flex-col bg-bgColor w-full h-screen text-center gap-20 items-center justify-center lg:flex lg:flex-row lg:opacity-100 lg:top-10 lg:h-10 lg:w-80 lg:left-auto lg:right-10 lg:bg-transparent"
  >
    <li class="nav__link">
      <a href="#about">About</a>
    </li>
    <li class="nav__link">
      <a href="#projects">Projects</a>
    </li>
    <li class="nav__link">
      <a href="#contact">Contact</a>
    </li>
  </ul>
</nav>

<script>
  const toggleButton = document.querySelector("#toggle__button");
  const navMenu = document.querySelector("#nav__menu");
  const navbar = document.querySelector("#navbar");
  toggleButton.addEventListener("click", () => {
    toggleButton.classList.toggle("activeButton");
    navMenu.classList.toggle("active");
    navbar.classList.toggle("activeNavbar");
  });
  document.querySelectorAll(".nav__link").forEach((li) =>
    li.addEventListener("click", () => {
      toggleButton.classList.remove("activeButton");
      navMenu.classList.remove("active");
      navbar.classList.remove("activeNavbar");
    })
  );
</script>

<style>
  nav {
    animation: blur linear both;
    animation-timeline: scroll();
    animation-range: 0 500px;
  }
  @keyframes blur {
    to {
      box-shadow: 0px 5px 50px -5px rgba(0, 0, 0, 0.1) 0px 0px 0px 1px rgba(0, 0, 0, 0.3);
      background: rgba(0, 0, 0, 0.3);
      backdrop-filter: blur(10px);
    }
  }
  .activeNavbar {
    background-image: url("../assets/Gradient1.png") !important;
    background-repeat: no-repeat !important;
    background-color: #050310 !important;
  }
  .activeButton {
    position: relative;
  }
  .activeButton span:nth-child(2) {
    opacity: 0;
  }
  .activeButton span:nth-child(1) {
    position: absolute;
    transform: rotate(45deg);
    transition: 0.5s;
  }
  .activeButton span:nth-child(3) {
    position: absolute;
    transform: rotate(-45deg);
    transition: 0.5s;
  }
  .active {
    display: flex;
    opacity: 1;
    left: 0;
    transition: 0.5s;
    background-image: url("../assets/Gradient1.png") !important;
    background-repeat: no-repeat !important;
  }
</style>
